<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme name used throughout the app so you can easily switch between AppThemeLightBase and AppThemeDarkBase here -->
    <style name="AppTheme" parent="FileChooserDialogAppThemeLight">

    </style>


    <style name="FileChooserDialogAppThemeLight" parent="AppThemeLightBase">

        <item name="FileChooserDialogFileIconTintColor">@color/fileChooserDialogFileIconTintColor_Light</item>
        <item name="FileChooserDialogFileIsSelectedCheckMarkTintColor">@color/fileChooserDialogFileIsSelectedCheckMarkTintColor_Light</item>
        <item name="FileChooserDialogNavigationMenuItemsIconTintColor">@color/fileChooserDialogNavigationMenuItemsIconTintColor_Light</item>

    </style>

    <style name="FileChooserDialogAppThemeDark" parent="AppThemeDarkBase">

        <item name="FileChooserDialogFileIconTintColor">@color/fileChooserDialogFileIconTintColor_Dark</item>
        <item name="FileChooserDialogFileIsSelectedCheckMarkTintColor">@color/fileChooserDialogFileIsSelectedCheckMarkTintColor_Dark</item>
        <item name="FileChooserDialogNavigationMenuItemsIconTintColor">@color/fileChooserDialogNavigationMenuItemsIconTintColor_Dark</item>

    </style>


    <style name="ParentDirectoryTextStyle" parent="TextAppearance.AppCompat.Small">
        <!-- textSize of TextAppearance.AppCompat.Small is 14sp, which i think is a bit too small, raised it therefore a bit -->
        <item name="android:textSize">@dimen/file_chooser_dialog_view_parent_directory_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
    </style>

</resources>